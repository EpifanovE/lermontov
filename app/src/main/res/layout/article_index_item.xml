<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="10dp"
    android:background="@drawable/article_index_item"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/articleItemHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        style="@style/articleIndexItemHeader"
        android:background="@drawable/article_index_item_header_bg"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/articleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/articleItemTitle"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/favoriteIcon"
            style="@style/favoriteButtonNonActive"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_baseline_favorite_24"
            app:iconGravity="textStart"
            app:iconSize="28sp"
            app:iconPadding="0dp"
            android:background="?android:attr/selectableItemBackground"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/articleItemBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        style="@style/articleIndexItemBody"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/articleExcerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            style="@style/articleItemBodyText"
            />
    </LinearLayout>

</LinearLayout>